<!DOCTYPE html>
<html lang="es">
<%- include('partial/head.ejs') %> 
<body>
<%- include('partial/header.ejs') %> 

    <main >
        <div class="container mt-5">
            <h1> <%= title %> </h1>
            <div class="row">
                <% autos.forEach(cadaAuto=> { %>
                <div class="col-12 col-md-6 col-lg-3 my-3">

                    <div class="card" style="width: 98%;">
                        <img src="/images/<%= cadaAuto.img %>" class="card-img-top" alt="...">
                        <div class="card-body">
                          <h5 class="card-title"><%= cadaAuto.marca %> </h5>
                          <a href="/autos/show/<%= cadaAuto.id %> " class="btn btn-primary">Ver mass</a>
                        </div>
                    </div>

                </div>
                <% }) %>
            </div>
        </div>
    </main>

<%- include('partial/footer.ejs') %> 
</body>
</html>